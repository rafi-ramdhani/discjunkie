<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>DiscJunkie</title>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar sticky-top navbar-expand-lg" style="background-color: #07141c;">
    <a href="#">
      <div class="container">
        <a href="/"><img
            src="https://lh3.googleusercontent.com/2RIq19exzNZr8jtkBxdow2idXPp0ELRQcsU9VMJIOnBZHAYVkRMbDzAi04c7YuMOpKoT=s170"
            alt="DiscJunkie"></a>

        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a href="/" class="nav-link" style="color: #ebe7da;">Home</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link" style="color: #ebe7da;">Sign In</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link" style="color: #ebe7da;">Sign Up</a>
            </li>
          </ul>
        </div>
      </div>
    </a>
  </nav>

  <!-- Showcase -->
  <section class="text-ligth p-5 text-center text-sm-start" style="background-color: #07141c">
    <div class="container">
      <div class="d-sm-flex align-items-center justify-content-between">
        <div>
          <h1 style="color: #ebe7da;">Find your favorite movie here!</h1>
          <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Architecto itaque tempora unde
            officiis voluptate cum culpa rem sint quis laboriosam.</p>
          <a href="/movies"><button class="btn text-dark btn-lg" style="background-color: #ed533c">Browse
              Movies</button></a>
        </div>
        <img class="img-fluid w-50 d-none d-sm-block" style="border-radius: 10px;border:5px solid #ffffff"
          src="https://www.stayathomemum.com.au/wp-content/uploads/2021/07/iStock_000002787011_Small.jpg" alt="Movie">
      </div>
    </div>
  </section>

  <!-- Random Section -->
  <section class="text-dark p-5" style="background-color: #ed533c">
    <div class="container">
      <div class="text-center">
        <h3 class="mb-3 mb-md-0">We've Picked Some Random Movies For You..</h3>
      </div>
    </div>
  </section>

  <!-- Boxes -->
  <section class="p-5" style="background-color: #ebe7da;">
    <div class="container">
      <div class="row text-center">
        <% randomMovies.forEach((element, index)=> { %>
          <div class="col-md" style="margin-bottom: 45px;">
            <div class="card" style="width: 18rem;height: 40rem;border-radius: 10px;border:5px solid #ffffff">
              <img src="<%= element.imgUrl %>" class="card-img-top" style="width: 17.3;height: 25rem" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%= element.title %>
                </h5>
                <p class="card-text"><strong>Format:</strong>
                  <%= element.format %>
                </p>
                <p class="card-text"><strong>Stock:</strong>
                  <%= element.stock %>
                </p>
                <p class="card-text"><strong>Price:</strong>
                  <%= formatPrice(element.price) %>
                </p>
                <a href="/movies/<%= element.id %>" class="btn" style="background-color: #ed533c">Details</a>
                <a href="#" class="btn" style="background-color: #ed533c">To Cart</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>